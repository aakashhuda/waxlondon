<section class="image-text-tile-container">
    {% if section.settings.selected-layout == "image-first" %}
        <div class="image-text-tile-image-container">
            <img class="image-text-tile-image" src="{{ section.settings.image | img_url: 'master' }}">
        </div>
        <div class="image-text-tile-text-container">{{ section.settings.text }}</div>
    {% else %}
        <div class="image-text-tile-text-container">{{ section.settings.text }}</div>
        <div class="image-text-tile-image-container">
            <img class="image-text-tile-image" src="{{ section.settings.image | img_url: 'master' }}">
        </div>
    {% endif %}
</section>

<style>
:root {
    --image-text-tile-image-width: 485px;
}

.image-text-tile-container {
    display: flex;
    justify-content: center;
}

.image-text-tile-image-container {
    background-color: {{ section.settings.bg-color }};
    max-width: var(--image-text-tile-image-width);
    height: calc( var(--small-image-width) + 120px );
    display: flex;
    justify-content: center;
}

.image-text-tile-text-container {
    background-color: {{ section.settings.bg-color }};
    max-width: var(--image-text-tile-image-width);
    height: calc( var(--small-image-width) + 120px );
    overflow: hidden;
    padding: {{ section.settings.text-padding }}px;
    font-size:{{ section.settings.text-font-size }}px; 
}

.image-text-tile-image {
    width: inherit;
    height: inherit;
}

</style>    

{% schema %}
{
    "name": "image-text-tile",
    "settings": [
        {
            "type": "select",
            "id": "selected-layout",
            "label": "Select Layout",
            "default": "image-first",
            "options": [
                {
                    "value": "image-first",
                    "label": "Image First Layout"
                },
                {
                    "value": "text-first",
                    "label": "Text First Layout"
                }
            ]
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Select Image"
        },
        {
            "type": "richtext",
            "id": "text",
            "label": "Add Text"
        },
        {
            "type": "color",
            "id": "bg-color",
            "label": "Choose text background color",
            "default": "#FFFFFF"
        },
        {
            "type": "range",
            "id": "text-padding",
            "min": 0,
            "max": 50,
            "step": 1,
            "unit": "px",
            "default": 0,
            "label": "Text Padding" 
        },
        {
            "type": "range",
            "id": "text-font-size",
            "min": 6,
            "max": 32,
            "step": 1,
            "unit": "px",
            "default": 16,
            "label": "Font Size"
        }
    ]
}
{% endschema %}
