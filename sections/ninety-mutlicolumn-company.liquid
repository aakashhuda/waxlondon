<div id="wrapper-{{ section.id }}"> 
    <section class="company-with-info-{{ section.id }}">
        {% for block in section.blocks %}
            {% case block.type %}
                {% when 'company-card' %}
                    <div class="company-card-{{ block.id }}">
                        <div class="company-name-{{ block.id }}">{{ block.settings.company-name }}</div>
                        <div class="company-origin-{{ block.id }}"><p><span>WHERE</span>: <span>{{ block.settings.company-origin }}</span></p></div>
                        <div class="company-description-{{ block.id }}">
                            <p>{{ block.settings.company-description }}</p>
                        </div>
                        <ul class="company-speciality-list-{{ block.id }}">
                            <li class="list-item-{{ block.id }}">{{ block.settings.list-content-1 }}</li>
                            <li class="list-item-{{ block.id }}">{{ block.settings.list-content-2 }}</li>
                        </ul>
                    </div>
            {% endcase %}
        {% endfor %}
    </section>
</div>

<style>
    #wrapper-{{ section.id }} {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .company-with-info-{{ section.id }} {
        display: flex;
        justify-content: center;
        align-items: center;
        width: {{ section.settings.section-width }}%;
    }

    {% for block in section.blocks %}

        {% case block.type %}
            {% when 'company-card' %}
                {% if forloop.length < 3 %}
                    .company-with-info-{{ section.id }} {
                        justify-content: flex-start;
                    }   
                {% endif %}
                .company-card-{{ block.id }} {
                    {% comment %} max-width: 440px; {% endcomment %}
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: start;
                    flex: 1;
                    padding: 2%;
                    padding-top: 0;
                    position: relative;
                    min-height: 800px;
                }
                .company-name-{{ block.id }} {
                    font-family: {{ block.settings.company-name-font }};
                    font-size: {{ block.settings.company-name-font-size }}px;
                    font-weight: {{ block.settings.company-name-font-weight }};
                    line-height: {{ block.settings.company-name-line-height }}px;
                    text-transform: uppercase;
                }
                .company-description-{{ block.id }} {
                    text-align: justify;
                    height: 100%;
                    font-family: {{ block.settings.company-description-font }};
                    font-size: {{ block.settings.company-description-font-size }}px;
                    font-weight: {{ block.settings.company-description-font-weight }};
                    line-height: {{ block.settings.company-description-line-height }}px;
                    text-align: justify;
                }
                .company-origin-{{ block.id }} {
                    font-family: {{ block.settings.company-origin-font }};
                    font-size: {{ block.settings.company-origin-font-size }}px;
                    font-weight: {{ block.settings.company-origin-font-weight }};
                    line-height: {{ block.settings.company-origin-line-height }}px;
                    text-transform: uppercase;
                }
                .company-name-{{ block.id }}, .company-origin-{{ block.id }}, .company-description-{{ block.id }}, .company-speciality-list-{{ block.id }} {
                    padding-left: {{ block.settings.product-text-left-padding }}px;
                    padding-right: {{ block.settings.product-text-right-padding }}px;
                }
                .company-speciality-list-{{ block.id }} {
                    padding: 0 30px;
                }
                .list-item-{{ block.id }} {
                    margin: 30px 0;
                    text-align: justify;
                    font-family: {{ block.settings.list-font }};
                    font-size: {{ block.settings.list-font-size }}px;
                    line-height: {{ block.settings.list-line-height }}px;
                }

                {% if block.settings.enable-border == true %}
                    .company-card-{{ block.id }} {
                        border-right: 1px solid #c0bfbd;
                    }
                {% endif %}

                @media (min-width: 1000px) and (max-width: 1300px) {
                    .company-name-{{ block.id }} {
                        font-size: 20px;
                    }
                }
                @media (min-width: 769px) and (max-width: 999px) {
                    .company-name-{{ block.id }} {
                        font-size: 15px;
                    }
                }

                @media (max-width: 768px) {
                    .company-name-{{ block.id }} {
                        font-size: {{ block.settings.company-name-mobile-font-size }}px;
                        line-height: {{ block.settings.company-name-line-height }}px;
                    }
                    .company-description-{{ block.id }} {
                        font-size: {{ block.settings.company-description-mobile-font-size }}px;
                        line-height: {{ block.settings.company-description-line-height }}px;
                    }
                    .company-origin-{{ block.id }} {
                        font-size: {{ block.settings.company-origin-mobile-font-size }}px;
                        line-height: {{ block.settings.company-origin-mobile-line-height }}px;
                    }
                    .list-item-{{ block.id }} {
                        font-size: {{ block.settings.list--mobile-font-size }}px;
                        line-height: {{ block.settings.list-mobile-line-height }}px;
                    }
                }

        {% endcase %}

    {% endfor %}

</style>

