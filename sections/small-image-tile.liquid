        {
            "type": "range",
            "id": "gap",
            "min": 0,
            "max": 30,
            "unit": "px",
            "default": 0,
            "step": 1,
            "label": "Image Gap"
        }
    ],
    "presets": [
        {
            "name": "Small Image Tile"
        }
    ]
}
{% endschema %}