<section class="small-image-tile-container-{{ section.id }}">
    <figure class="tile-image-container-{{ section.id }} image-container-1-{{ section.id }}">
        <img class="tile-image-{{ section.id }} image-1-{{ section.id }}" src="{{ section.settings.image-1 | img_url: 'master' }}">
        <figcaption class="tile-text-container-{{ section.id }}">
            Model wears <a href="{{ section.settings.wearing-url | url_encode }}">{{ section.settings.wearing-text }}</a>
            with <a href="{{ section.settings.with-url-1 | url_encode }}">{{ section.settings.with-text-1 }}</a> and
            <a href="{{ section.settings.with-url-2 | url_encode }}">{{ section.settings.with-text-2 }}</a>
        </figcaption>
    </figure>
    <figure class="tile-image-container-{{ section.id }} image-container-2-{{ section.id }}">
        <img class="tile-image-{{ section.id }} image-2-{{ section.id }}" src="{{ section.settings.image-2 | img_url: 'master' }}">
        <figcaption class="tile-text-container-{{ section.id }}">
            Model wears <a href="{{ section.settings.wearing-url-right | url_encode }}">{{ section.settings.wearing-text-right }}</a>
            with <a href="{{ section.settings.with-url-1-right | url_encode }}">{{ section.settings.with-text-1-right }}</a> and
            <a href="{{ section.settings.with-url-2-right | url_encode }}">{{ section.settings.with-text-2-right }}</a>
        </figcaption>
    </figure>
</section>

<style>
:root {
    --small-image-width: {{ section.settings.image-1-width }}px;
    --image-2-width: {{ section.settings.image-2-width }}px;
}
.small-image-tile-container-{{ section.id }} {
    display: flex;
    justify-content: center;
    gap: {{ section.settings.gap }}px;
}

.small-image-tile-container-{{ section.id }} figure {
    margin: 0;
}

.tile-image-container-{{ section.id }} figcaption {
    margin: 0;
    padding: 0;
}

.tile-image-container-{{ section.id }} {
    background-color: rgb(255, 255, 255);
    display: flex;
    flex-direction: column;
    justify-content: stretch;
}
.tile-image-{{ section.id }} {
    width: 100%;
    height: auto;
}

.image-container-1-{{ section.id }} {
    padding: {{ section.settings.image-1-padding }}px;
    width: var(--small-image-width);
}

.image-container-2-{{ section.id }} {
    padding: {{ section.settings.image-2-padding }}px;
    width: var(--image-2-width);
}

.tile-text-container-{{ section.id }} {
    word-wrap: break-word;
    padding: 0;
    margin: 0;
    font-size: 12px;
}

{% if section.settings.show-text == false %}
    .tile-text-container-{{ section.id }}{
        display: none;
    }
{% endif %}

</style>

